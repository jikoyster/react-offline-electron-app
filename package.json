{
  "name": "react-offline-electron-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm:dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "electron-builder",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dexie": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sequelize": "^6.37.7",
    "serve": "^14.2.4",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "vite": "^7.1.3",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.example.reactoffline",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
